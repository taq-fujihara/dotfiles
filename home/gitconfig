[core]
    editor = nvim
    quotepath = false
    ignorecase = false
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    light = false
    side-by-side = true
    line-numbers = true

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[rebase]
	updateRefs = true

[pull]
    ff = only

[alias]
    alias = config --get-regexp alias.*
    me = config --get-regexp user
    summary = status --short --untracked-files
    graph = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
    ahead = graph @{u}..HEAD
    behind = graph ..FETCH_HEAD
    staged = diff --staged
    stashes = stash list
    branches = branch -a
    create-and-switch = switch -c
    delete-branch = branch -d
    rename-branch = branch -m
    remotes = remote -v
    amend = commit --amend
    stash-all = stash --include-untracked
    edit = commit --amend --only
    unstage = restore --staged
    discard = restore

    # shortened version of existing commands. should be least.
    # st = status
    # sw = switch
    # gr = graph

    # scripts
    cz = "!bun x git-cz -e"
    ignore-dir = "!echo '\n# created by \"ignore-dir\" alias\n*' >> ${GIT_PREFIX:-.}/.gitignore"

    # for typo I often make...
    puhs = push
    comit = commit

[credential "https://source.developers.google.com"]
    helper = gcloud.sh

[init]
    defaultBranch = main

[include]
    path = ~/.gitconfig.local

[user]
	email = taq.fujihara@gmail.com
	name = taq-fujihara

