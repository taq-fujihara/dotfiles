[core]
    editor = nvim
    quotepath = false
    ignorecase = false
    pager = delta

[interactive]
    diffFilter = delta --color-only

[add.interactive]
    useBuiltin = false

[delta]
    navigate = true
    light = false
    side-by-side = true
    line-numbers = true

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[pull]
    ff = only

[alias]
    alias = config --get-regexp alias.*
    me = config --get-regexp user
    graph = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
    gr = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
    amend = commit --amend
    stashall = stash --include-untracked
    edit = commit --amend --only
    unstage = restore --staged
    discard = restore
    branches = branch -a
    stashes = stash list
    remotes = remote -v
    # shortened version of existing commands
    st = status
    sw = switch
    # for typo I often make...
    puhs = push

[credential "https://source.developers.google.com"]
    helper = gcloud.sh

[init]
    defaultBranch = main

[include]
    path = ~/.gitconfig.local

[user]
	email = taq.fujihara@gmail.com
	name = taq-fujihara
