[core]
    excludesfile = ~/.gitignore
    editor = nvim
    quotepath = false
    ignorecase = false
    pager = delta

[column]
    ui = auto

[branch]
    sort = -committerdate

[tag]
    sort = version:refname

[init]
    defaultBranch = main

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    light = false
    side-by-side = true
    line-numbers = true

[commit]
    verbose = true

[rerere]
    enabled = true
    autoupdate = true

[merge]
    conflictstyle = diff3

[diff]
    algorithm = histogram
    colorMoved = plain
    mnemonicPrefix = true
    renames = true

[rebase]
    updateRefs = true
    autoSquash = true
    autoStash = true

[push]
    default = simple
    autoSetupRemote = true
    followTags = true

[pull]
    ff = only

[alias]
    alias = config --get-regexp alias.*
    me = config --get-regexp user
    summary = status --short --untracked-files
    graph = log --graph --date=short --decorate=short --all --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
    ahead = graph @{u}..HEAD
    behind = graph ..FETCH_HEAD
    staged = diff --staged
    stashes = stash list
    branches = branch -a
    create-and-switch = switch -c
    delete-branch = branch -d
    rename-branch = branch -m
    remotes = remote -v
    amend = commit --amend
    fixup = commit --fixup
    stash-all = stash --include-untracked
    edit = commit --amend --only
    unstage = restore --staged
    discard = restore
    please = push --force-with-lease --force-if-includes

    # shortened version of existing commands. should be least.
    # st = status
    # sw = switch
    # gr = graph

    # scripts
    cz = "!bun x git-cz -e"
    ignore-dir = "!echo '\n# created by \"ignore-dir\" alias\n*' >> ${GIT_PREFIX:-.}/.gitignore"

[help]
    autocorrect = prompt

[credential "https://source.developers.google.com"]
    helper = gcloud.sh

[include]
    path = ~/.gitconfig.local

[user]
    email = taq.fujihara@gmail.com
    name = taq-fujihara
